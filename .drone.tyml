build:
  image: golang:1.5
  environment:
    - GO15VENDOREXPERIMENT=1
    - GOOS=linux
    - GOARCH=amd64
    - CGO_ENABLED=0
  commands:
    - go get
    - go build
    - go test

publish:
  docker:
    username: drone
    password: $$DOCKER_PASS
    email: $$DOCKER_EMAIL
    repo: plugins/drone-hipchat
    when:
      branch: master

plugin:
  name: Slack
  desc: Send build status notifications to your HipChat room.
  type: notify
  image: plugins/drone-hipchat
  labels:
    - chat
    - messaging
